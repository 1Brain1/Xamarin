<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns:controls="clr-namespace:CarouselView.Controls"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CarouselView.MdnDetailsPage">

    <Grid
        RowDefinitions="Auto, *, 2*">

        <!--Hello-->
        <StackLayout
            Grid.Row="0"
            HeightRequest="60">
            <Label
                Padding="30, 0, 0, 0"
                Text="Hello, Mister!"
                VerticalOptions="End"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="Title" />
        </StackLayout>

        <!--Carousel-->
        <StackLayout
            Grid.Row="1">
            <CarouselView
                x:Name="carouselView"
                Loop="False">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            HasShadow="True"
                            BorderColor="DarkGray"
                            BackgroundColor="{Binding ProviderColor}">

                            <Grid
                                VerticalOptions="Center"
                                ColumnDefinitions="Auto,*,*,Auto">

                                <Label
                                    Padding="0,0,5,0"
                                    Grid.Column="0"
                                    VerticalOptions="Center"
                                    Text="&lt;"
                                    TextColor="White"
                                    FontSize="20" />

                                <StackLayout
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    Grid.Column="1">

                                    <controls:Label
                                        HorizontalOptions="Start"
                                        TextColor="{Binding ProviderColor}"
                                        FontSize="Large"
                                        Text="{Binding Provider}"/>

                                    <Label
                                        Text="{Binding MndNumber}"
                                        FontAttributes="Bold"
                                        TextColor="White"
                                        FontSize="26" />

                                    <Grid
                                        ColumnDefinitions="Auto, Auto">
                                        <controls:Label
                                            Grid.Column="0"
                                            Text="{Binding Status}"
                                            BackgroundColor="{Binding StatusColor}" 
                                            FontSize="Micro"/>

                                        <controls:Label
                                            Grid.Column="1"
                                            Text="UPDATE PLAN"
                                            BackgroundColor="#FBC472" 
                                            FontSize="Micro"/>
                                    </Grid>
                                </StackLayout>


                                <Label
                                    Grid.Column="3"
                                    Padding="5,0,0,0"
                                    VerticalOptions="Center"
                                    Text="&gt;"
                                    TextColor="White"
                                    FontSize="20" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </StackLayout>

        <!--Subscription & Plan-->
        <Grid
            BackgroundColor="Green"
            Margin="10,10"
            Grid.Row="2"
            RowDefinitions="Auto, Auto"
            ColumnDefinitions="Auto, *, Auto">

            <!--Subscription-->
            <Label
                Grid.Column="0"
                Text="SUBSCRIPTION"
                FontSize="Subtitle"
                FontAttributes="Bold" 
                TextColor="#514D4D"/>

            <!--History-->
            <controls:Button
                Grid.Column="2"
                BackgroundColor="#60E17C"
                Source="ic_card"
                Text="HISTORY" />

            <Grid
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.ColumnSpan="3">

                <Frame
                    Padding="0,10"
                    BackgroundColor="#D7D7D7" 
                    CornerRadius="10">

                    <Grid
                        BackgroundColor="Aqua"
                        RowDefinitions="Auto,*">

                        <Image 
                            Grid.RowSpan="2"
                            Source="ic_chart.png"/>

                        <StackLayout
                            VerticalOptions="Center"
                            BackgroundColor="Red"
                            Grid.Column="1"
                            Grid.RowSpan="2">
                            <Label
                                Text="12 GB"
                                FontAttributes="Bold"
                                TextColor="White"/>
                            <Label 
                                Grid.Row="1"
                                Grid.Column="1" 
                                Text="LEFT OF 124"
                                FontSize="9"
                                FontAttributes="Bold"
                                TextColor="White"/>
                        </StackLayout>

                    </Grid>
                </Frame>

                <Frame
                Padding="0,10"
                Grid.Column="1"
                BackgroundColor="#D7D7D7" 
                CornerRadius="10">
                    <Grid
                    BackgroundColor="Aqua">
                        <Image Grid.RowSpan="2"
                           Grid.Column="0"/>
                        <Label 
                        Grid.Column="1" 
                        Text="12 GB"
                        FontAttributes="Bold"
                        TextColor="White"/>
                        <Label 
                        Grid.Row="1"
                        Grid.Column="1" 
                        Text="LEFT OF 124"
                        FontAttributes="Bold"
                        TextColor="White"/>

                    </Grid>
                </Frame>

                <Frame
                Padding="0,10"
                Grid.Column="2"
                BackgroundColor="#D7D7D7" 
                CornerRadius="10">
                    <Grid
                    BackgroundColor="Aqua">
                        <Image Grid.RowSpan="2"
                           Grid.Column="0"/>
                        <Label 
                        Grid.Column="1" 
                        Text="12 GB"
                        FontAttributes="Bold"
                        TextColor="White"/>
                        <Label 
                        Grid.Row="1"
                        Grid.Column="1" 
                        Text="LEFT OF 124"
                        FontAttributes="Bold"
                        TextColor="White"/>

                    </Grid>
                </Frame>
            </Grid>

            <Label Grid.Row="3"/>
            <Label Grid.Row="4"/>
            <Label Grid.Row="5"/>
        </Grid>

    </Grid>
</ContentPage>