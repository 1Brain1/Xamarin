<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CarouselView.MdnDetailsPage">
    
    <StackLayout
        Spacing="0">
        <Frame
            Padding="20,0,0,5"
            HeightRequest="60"
            CornerRadius="5">
            <Label
                Padding="0"
                Text="Hello, Mister!"
                HorizontalTextAlignment="Start"
                VerticalTextAlignment="End"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="Title" />
        </Frame>

        <RelativeLayout
            Padding="0"
            Margin="0">
            <StackLayout
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
                RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.33}">
                <CarouselView
                    Loop="False"
                    ItemsSource="{Binding Mdns}">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Frame
                                    BorderColor="DarkGray"
                                    BackgroundColor="#8668FB"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand">

                                    <StackLayout>
                                        <Label
                                            Text="{Binding MndNumber}"
                                            FontAttributes="Bold"
                                            TextColor="White"
                                            FontSize="Title" />

                                        <Label
                                            Text="{Binding Sim}"
                                            FontAttributes="Bold"
                                            TextColor="White"
                                            FontSize="Title" />

                                    </StackLayout>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>

            </StackLayout>

        </RelativeLayout>


    </StackLayout>
</ContentPage>