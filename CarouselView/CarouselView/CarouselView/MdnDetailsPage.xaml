<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CarouselView.MdnDetailsPage">

    <StackLayout
        Spacing="0">
        <Frame
            Padding="20,0,0,5"
            HeightRequest="60"
            CornerRadius="5">
            <Label
                Padding="0"
                Text="Hello, Mister!"
                HorizontalTextAlignment="Start"
                VerticalTextAlignment="End"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="Title" />
        </Frame>

        <RelativeLayout
            Padding="0"
            Margin="0">
            <StackLayout
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
                RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.3}">
                <CarouselView
                    Loop="False"
                    ItemsSource="{Binding Mdns}">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Frame
                                    BorderColor="DarkGray"
                                    BackgroundColor="#8668FB"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand">

                                    <Grid Padding="30,0,0,0"
                                          RowDefinitions="*,Auto,Auto,*"
                                          ColumnDefinitions="Auto, Auto, *">
                                        <Label
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Text="{Binding MndNumber}"
                                            FontAttributes="Bold"
                                            TextColor="White"
                                            FontSize="Title" />

                                        <Frame
                                            Padding="8,0,8,0"
                                            Grid.Row="2"
                                            CornerRadius="15"
                                            BackgroundColor="{Binding StatusColor}">
                                            <Label
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding Status}"
                                                TextColor="White"
                                                FontSize="Micro" 
                                                />
                                        </Frame>

                                        <Frame
                                            Padding="8,0,8,0"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            CornerRadius="15"
                                            BackgroundColor="#F8617C">

                                            <Label
                                                HorizontalTextAlignment="Center"
                                                VerticalTextAlignment="Center"
                                                Text="! UPDATE PLAN"
                                                TextColor="White"
                                                FontSize="Micro" />
                                        </Frame>

                                    </Grid>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
            </StackLayout>

            <StackLayout Orientation="Horizontal" >
                <Label 
                Text="SUBSCRIPTION"
                    FontSize="Subtitle"
                    FontAttributes="Bold"/>
                <Frame
                    Padding="8,0,8,0"
                    Margin="0"
                    BackgroundColor="#60E17C"
                    CornerRadius="10">
                    <Label 
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"
                        TextColor="White"
                        Text=" PAY"/>
                </Frame>

            </StackLayout>

        </RelativeLayout>
    </StackLayout>
</ContentPage>