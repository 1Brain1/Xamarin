<?xml version="1.0" encoding="utf-8"?>

<StackLayout
    x:Name="parent"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CarouselView.Controls.MyCustomSwitch">
    <Frame
        VerticalOptions="Start"
        HorizontalOptions="Start"
        x:Name="mainFrame"
        HasShadow="False"
        Padding="0,3"
        WidthRequest="120"
        HeightRequest="60"
        BackgroundColor="#60E17C"
        CornerRadius="32">
        <Frame
            x:Name="thumbFrame"
            HasShadow="False"
            Padding="0"
            WidthRequest="60"
            HeightRequest="60"
            CornerRadius="30"
            HorizontalOptions="Start"
            VerticalOptions="CenterAndExpand" />
        <Frame.GestureRecognizers>
            <PanGestureRecognizer PanUpdated="OnPanUpdated" />
            <TapGestureRecognizer Tapped="OnTaped" />
        </Frame.GestureRecognizers>
    </Frame>
    
    
    <StackLayout Orientation="Horizontal">
        <Label
            HorizontalOptions="Start"
            x:Name="eTotalX"/>
        <Label
            HorizontalOptions="EndAndExpand"
            x:Name="TranslationX"/>
    </StackLayout>
    
</StackLayout>